rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }

    // Users can read/write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Users can read/write their own trading data
    match /trading/{userId}/positions/{positionId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /trading/{userId}/transactions/{transactionId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Public market data (read-only)
    match /market_data/{symbol} {
      allow read: if true;
      allow write: if false; // Only backend services can write market data
    }

    // Testimonials (read-only for users)
    match /testimonials/{testimonialId} {
      allow read: if true;
      allow write: if false; // Only backend services can write testimonials
    }
  }
}